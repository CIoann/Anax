<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e9dfca"
    android:orientation="vertical"
    android:weightSum="100" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="45"
        android:gravity="center"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/cbbar"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:button="@drawable/cbbar"
            android:padding="10dp"
            android:text="" />

        <CheckBox
            android:id="@+id/cbcoffee"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:button="@drawable/cbcoffee"
            android:padding="10dp"
            android:text="" />

        <CheckBox
            android:id="@+id/cbcinema"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:button="@drawable/cbcinema"
            android:padding="10dp"
            android:text="" />

        <CheckBox
            android:id="@+id/cbclub"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:button="@drawable/cbclub"
            android:padding="10dp"
            android:text="" />

        <CheckBox
            android:id="@+id/cbrestaurant"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:button="@drawable/cbrestaurant" />
        <!--
        <ImageButton
